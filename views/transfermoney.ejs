<%- include("../partials/header")%>
     
    <%if(error){%>
        <div class="alert error <%= error%>"><%= error%></div>
    <% }; %>

    <div class="transfer-form">
        <h1>Transfer Money</h1>

        <form action="/transferMoney" method="POST">
        
            <div class="input-row">
                <label for="">Sender Name: </label>
                <select name="senderName" id="">
                    <option disabled="disabled" selected="selected">--Choose Sender--</option>

                    <% customers.map(function(customer){ %>
                        <option value="<%= customer.name%>"><%= customer.name%></option>
                    <% }); %>

                </select>
            </div>

            <div class="input-row">
                <label>Receiver Name :</label>
                <select name="receiverName" id="">
                    <option disabled="disabled" selected="selected">--Choose Receiver--</option>

                    <% customers.map(function(customer){ %>
                        <option value="<%= customer.name%>"><%= customer.name%></option>
                    <% }); %>

                </select>
            </div>

            <div class="input-row">
                <label>Amount: </label>
                <input name="amount" type="number" placeholder="Amount">
            </div>

            <button name="transfer" type="submit">Transfer</button>
        </form>
    </div>

</body>
</html>